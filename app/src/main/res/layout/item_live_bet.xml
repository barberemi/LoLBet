<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#131F2C"
    app:cardCornerRadius="16dp"
    app:strokeColor="#2A394A"
    app:strokeWidth="1dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEC (23h24)"
            android:textColor="#99FFFFFF"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_bet_for"
            android:textColor="#FFEB3B"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sivPlayerAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageStyle"
            app:srcCompat="@drawable/xadxxx" />

        <LinearLayout
            android:id="@+id/layoutTeams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvEventTitle">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgTeamA"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="8dp"
                android:background="#1A232E"
                app:shapeAppearanceOverlay="@style/CircleImageStyle"
                app:strokeColor="#4CAF50"
                app:strokeWidth="2dp"
                app:srcCompat="@drawable/g2_esport" />

            <TextView
                android:id="@+id/tvVs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="VS"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgTeamB"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="8dp"
                android:background="#1A232E"
                app:shapeAppearanceOverlay="@style/CircleImageStyle"
                app:strokeColor="#F44336"
                app:strokeWidth="2dp"
                app:srcCompat="@drawable/fnatic" />
        </LinearLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="sivPlayerAvatar,layoutTeams" />

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/barrierBottom">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBetLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bet_green"
                android:text="G2 ESPORTS\n170 VOTES"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBetRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bet_red"
                android:text="FNC ESPORTS\n250 VOTES"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>