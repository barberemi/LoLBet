<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#131F2C"
    app:cardCornerRadius="16dp"
    app:strokeColor="#2A394A"
    app:strokeWidth="1dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_bet_championship_or_player_and_date"
            android:textColor="#99FFFFFF"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_bet_for"
            android:textColor="#FFEB3B"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTeams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/areaVoteA"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sivPlayerAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvTeamNameA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TeamA"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingStart="5dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@+id/tvVotesA"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imgCheckA"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/bg_white_circle_subtle"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#4CAF50"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="@id/tvTeamNameA"
                    app:layout_constraintBottom_toBottomOf="@id/tvTeamNameA"
                    app:layout_constraintEnd_toStartOf="@+id/tvTeamNameA" />

                <TextView
                    android:id="@+id/tvVotesA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_nb_votes"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTeamNameA" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sivPlayerAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CircleImageStyle"
                app:srcCompat="@drawable/xadxxx" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/areaVoteB"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sivPlayerAvatar"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvTeamNameB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TeamB"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingStart="5dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@+id/tvVotesB"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imgCheckB"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/bg_white_circle_subtle"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#4CAF50"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="@id/tvTeamNameB"
                    app:layout_constraintBottom_toBottomOf="@id/tvTeamNameB"
                    app:layout_constraintEnd_toStartOf="@+id/tvTeamNameB"/>

                <TextView
                    android:id="@+id/tvVotesB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_nb_votes"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTeamNameB" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>